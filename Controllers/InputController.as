package Controllers {	import flash.display.MovieClip;	import flash.events.*;		public class InputController {				public static const inputCodeList:Array = [37, 39, 38, 40, 65, 68, 87, 83, 32, 16, 80];		/*array containing keycodes accepted as input (Does not change as program continues running				Currently, this list contains:		37 = left arrow key		65 = 'a' key		32 = SPACE key		39 = right arrow key	68 = 'd' key		16 = SHIFT key		38 = up arrow key		87 = 'w' key		80 = 'p' key		40 = down arrow key		83 = 's' key				*/				public static var inputPressedList:Array = [false, false, false, false, false, false, false, false, false, false, false];		//parallel array to inputCodeList containing the state of the keys listed in inputCodeList				public static var inputUpList:Array = [true, true, true, true, true, true, true, true, true, true, true];		//parallel array to inputCode List containing whether the key is HELD down				public static function initInput(){			//fillInputs();			//PROMISES: adds event listeners keysDown and keysUp to the stage			Main.stage.addEventListener(KeyboardEvent.KEY_DOWN, keysDown);			Main.stage.addEventListener(KeyboardEvent.KEY_UP, keysUp);		}				private function fillInputs():void{			for(var i:int = 0; i < inputCodeList.length; i++){				inputPressedList[i] = false;				inputUpList[i] = true;			}		}				public function InputController() {			//no objects of this class are created		}				//receives key commands and stores its state in an array		private static function keysDown(event:KeyboardEvent):void{			for(var i:int = 0; i < inputCodeList.length; i++){				if(event.keyCode == inputCodeList[i]){					inputPressedList[i] = true;				}			}		}				private static function keysUp(event:KeyboardEvent):void{			for(var i:int = 0; i < inputCodeList.length; i++){				if(event.keyCode == inputCodeList[i]){					inputPressedList[i] = false;					inputUpList[i] = true; 				}			}		}	}	}